* {
     margin: 0;
     padding: 0;
     box-sizing: border-box;
 }

 :root {
     --black: #131314;
     --white: #FFFFFF;
     --cream: #FAF9F0;
     --gray: #8B8B8B;
     --light-gray: #E5E5E5;
     --blue: #2B5CE6;
     --orange: #D97757;
     --grid-size: 40px;
 }

 body {
     font-family: 'Lora', serif;
     background: var(--cream);
     color: var(--black);
     line-height: 1.6;
 }

 h1, h2, h3, h4, h5, h6 {
     font-family: 'Inter', sans-serif;
     font-weight: 600;
 }

@keyframes fadeInUp {
 /* Animations */
 @keyframes fadeInUp {
     from {
         opacity: 0;
         transform: translateY(30px);
     }

     to {
         opacity: 1;
         transform: translateY(0);
     }
 }
     from {
         opacity: 0;
         transform: translateY(30px);
 }
     }

     to {
         opacity: 1;
         transform: translateY(0);
         opacity: 0;
         transform: translateX(50px);
     }

     to {
         opacity: 1;
         transform: translateX(0);
     }
 }

 @keyframes slideInLeft {
     from {
         opacity: 0;
         transform: translateX(-50px);
     }

     to {
         opacity: 1;
         transform: translateX(0);
     }
 }

 @keyframes scaleIn {
     from {
         opacity: 0;
         transform: scale(0.9);
     }

     to {
         opacity: 1;
         transform: scale(1);
     }
 }

 .animate-fade-in-up {
     animation: fadeInUp 0.8s ease-out forwards;
 }

 .animate-fade-in {
     animation: fadeIn 1s ease-out forwards;
 }

 .animate-slide-right {
     animation: slideInRight 0.8s ease-out forwards;
 }

 .animate-slide-left {
     animation: slideInLeft 0.8s ease-out forwards;
 }

 .animate-scale {
     animation: scaleIn 0.6s ease-out forwards;
 }

 /* Delay classes */
 .delay-1 {
     animation-delay: 0.1s;
     opacity: 0;
 }

 .delay-2 {
     animation-delay: 0.2s;
     opacity: 0;
 }

 .delay-3 {
     animation-delay: 0.3s;
     opacity: 0;
 }

 .delay-4 {
     animation-delay: 0.4s;
     opacity: 0;
 }

 .delay-5 {
     animation-delay: 0.5s;
     opacity: 0;
 }

 /* Top Bar */
 .top-bar {
     background: var(--black);
     color: var(--white);
     padding: 10px 40px;
     display: flex;
     justify-content: space-between;
     font-size: 11px;
     font-family: 'Inter', sans-serif;
     letter-spacing: 0.5px;
 }

 .top-bar-links a {
     color: var(--white);
     text-decoration: none;
     margin-left: 20px;
     text-transform: uppercase;
     transition: color 0.3s;
 }

 .top-bar-links a:hover {
     color: var(--orange);
 }

 /* Navigation */
 nav {
     background: var(--cream);
     padding: 20px 40px;
     display: flex;
     justify-content: space-between;
     align-items: center;
     border-bottom: 2px solid var(--black);
 }

 .logo {
     /* border: 3px solid var(--black); */
     padding: 12px 24px;
     font-weight: 700;
     font-size: 20px;
     letter-spacing: 1px;
     transition: all 0.3s;
     cursor: pointer;
 }

 .logo:hover {
     background: var(--black);
     color: var(--white);
 }

 .nav-menu {
     display: flex;
     gap: 40px;
     list-style: none;
 }

 .nav-menu a {
     color: var(--black);
     text-decoration: none;
     font-size: 14px;
     font-weight: 500;
     text-transform: uppercase;
     letter-spacing: 0.5px;
     position: relative;
     transition: color 0.3s;
 }

 .nav-menu a::after {
     content: '';
     position: absolute;
     bottom: -5px;
     left: 0;
     width: 0;
     height: 2px;
     background: var(--blue);
     transition: width 0.3s;
 }

 .nav-menu a:hover::after {
     width: 100%;
 }

 .nav-right {
     font-family: 'Inter', sans-serif;
     font-size: 12px;
 }

 /* Main Grid Layout */
 .main-grid {
     display: grid;
     grid-template-columns: repeat(12, 1fr);
     min-height: calc(100vh - 150px);
     background-image:
         linear-gradient(var(--light-gray) 1px, transparent 1px),
         linear-gradient(90deg, var(--light-gray) 1px, transparent 1px);
     background-size: var(--grid-size) var(--grid-size);
 }

 /* Left Content Area */
 .content-left {
     grid-column: 1 / 8;
     padding: 60px 40px;
     background: var(--white);
     border-right: 2px solid var(--black);
     display: flex;
     flex-direction: column;
     justify-content: center;
 }

 .hero-label {
     /* border: 2px solid var(--black); */
     display: inline-block;
     /* padding: 8px 16px; */
     font-size: 15px;
     font-weight: 600;
     letter-spacing: 1px;
     margin-bottom: 40px;
     text-transform: uppercase;
     font-family: 'Inter', sans-serif;
     width: fit-content;
 }

 h1 {
     font-size: 4.5vw;
    text-transform: uppercase;
     line-height: 0.95;
     font-weight: 700;
     margin-bottom: 40px;
     letter-spacing: -1px;
 }

 .title-underscore {
     color: var(--orange);
 }

 .hero-description {
     font-size: 18px;
     line-height: 1.6;
     margin-bottom: 50px;
     max-width: 500px;
     color: var(--black);
 }

 .cta-button {
     background: var(--black);
     color: var(--white);
     border: none;
     padding: 18px 40px;
     font-size: 13px;
     font-weight: 600;
     letter-spacing: 1px;
     text-transform: uppercase;
     cursor: pointer;
     font-family: 'Inter', sans-serif;
     transition: all 0.3s;
     width: fit-content;
 }

 .cta-button:hover {
     background: var(--blue);
     transform: translateX(5px);
 }

 /* Right Sidebar */
 .sidebar-right {
     grid-column: 8 / 13;
     background: var(--cream);
     padding: 60px 40px;
     object-fit: scale-down;
     position: relative;
     display: flex;
     flex-direction: column;
     align-items: center;
 }

 .profile-photo-container {
     width: 450px;
     height: 450px;
     border: 1px solid var(--black);
     border-radius: 100%;
     background: var(--cream);
     display: flex;
     align-items: center;
     justify-content: center;
     flex-direction: column;
     margin-bottom: 40px;
     position: relative;
     overflow: hidden;
 }

 .profile-photo{
    margin-top: 50%;
 }

 .sidebar-title {
     font-size: 14px;
     font-weight: 600;
     letter-spacing: 2px;
     text-transform: uppercase;
     font-family: 'Inter', sans-serif;
     margin-bottom: 30px;
     border-bottom: 2px solid var(--black);
     padding-bottom: 10px;
     width: 100%;
 }

 .info-blocks {
     display: flex;
     flex-direction: column;
     gap: 20px;
     width: 100%;
 }

 .info-block {
     border: 2px solid var(--black);
     padding: 20px;
     background: var(--white);
     transition: all 0.3s;
     cursor: pointer;
 }

 .info-block:hover {
     transform: translateX(-5px);
     box-shadow: 5px 5px 0 var(--black);
 }

 .info-block h3 {
     font-size: 13px;
     font-weight: 700;
     margin-bottom: 10px;
     text-transform: uppercase;
     letter-spacing: 1px;
     font-family: 'Inter', sans-serif;
 }

 .info-block p {
     font-size: 12px;
     line-height: 1.6;
     color: var(--gray);
 }

 .info-block .meta {
     font-size: 10px;
     margin-top: 10px;
     font-family: 'Inter', sans-serif;
     text-transform: uppercase;
     letter-spacing: 0.5px;
 }

 /* Featured Section */
 .featured-section {
     padding: 80px 40px;
     background: var(--white);
     border-top: 2px solid var(--black);
 }

 .section-header {
     margin-bottom: 60px;
 }

 .section-label {
     font-size: 12px;
     font-weight: 600;
     letter-spacing: 2px;
     text-transform: uppercase;
     margin-bottom: 20px;
     font-family: 'Inter', sans-serif;
 }

 .section-title {
     font-size: 56px;
     font-weight: 700;
     letter-spacing: -1px;
 }

 /* Projects Grid */
 .projects-grid {
     display: grid;
     grid-template-columns: repeat(2, 1fr);
     gap: 40px;
 }

 .project-card {
     background: var(--white);
     border: 2px solid var(--black);
     display: flex;
     flex-direction: column;
     overflow: hidden;
     transition: all 0.3s;
 }

 .project-card:hover {
     transform: translateY(-10px);
     box-shadow: 10px 10px 0 var(--black);
 }

 .project-image {
     width: 100%;
     height: 300px;
     background: var(--cream);
     border-bottom: 2px solid var(--black);
     display: flex;
     align-items: center;
     justify-content: center;
     flex-direction: column;
     position: relative;
     overflow: hidden;
     background-image:
         linear-gradient(var(--light-gray) 1px, transparent 1px),
         linear-gradient(90deg, var(--light-gray) 1px, transparent 1px);
     background-size: 20px 20px;
 }

 .project-image-icon {
     font-size: 64px;
     color: var(--gray);
     margin-bottom: 10px;
 }

 .project-image-text {
     font-size: 11px;
     font-family: 'Inter', sans-serif;
     color: var(--gray);
     text-transform: uppercase;
     letter-spacing: 1px;
 }

 .project-content {
     padding: 30px;
     display: flex;
     flex-direction: column;
     flex-grow: 1;
 }

 .project-number {
     font-size: 60px;
     font-weight: 700;
     color: var(--cream);
     font-family: 'Inter', sans-serif;
     line-height: 1;
     margin-bottom: 15px;
 }

 .project-title {
     font-size: 24px;
     font-weight: 700;
     margin-bottom: 15px;
     letter-spacing: -0.5px;
 }

 .project-description {
     font-size: 14px;
     line-height: 1.6;
     color: var(--gray);
     margin-bottom: 25px;
     flex-grow: 1;
 }

 .project-tags {
     display: flex;
     gap: 8px;
     flex-wrap: wrap;
 }

 .tag {
     border: 1px solid var(--black);
     padding: 6px 12px;
     font-size: 10px;
     font-weight: 500;
     font-family: 'Inter', sans-serif;
     text-transform: uppercase;
     letter-spacing: 0.5px;
     transition: all 0.3s;
 }

 .tag:hover {
     background: var(--black);
     color: var(--white);
 }

 /* Expertise Section */
 .expertise-section {
     padding: 80px 40px;
     background: var(--cream);
     border-top: 2px solid var(--black);
 }

 .expertise-grid {
     display: grid;
     grid-template-columns: repeat(3, 1fr);
     gap: 2px;
     background: var(--black);
     border: 2px solid var(--black);
     margin-top: 60px;
 }

 .expertise-card {
     background: var(--white);
     padding: 50px 40px;
 }

 .expertise-icon {
     font-size: 48px;
     margin-bottom: 30px;
 }

 .expertise-title {
     font-size: 22px;
     font-weight: 700;
     margin-bottom: 20px;
     letter-spacing: -0.5px;
 }

 .expertise-list {
     font-size: 14px;
     line-height: 2;
     color: var(--gray);
     font-family: 'Lora', serif;
 }

 /* Stats Section */
 .stats-section {
     display: grid;
     grid-template-columns: repeat(4, 1fr);
     gap: 0;
     background: var(--black);
     border-top: 2px solid var(--black);
 }

 .stat-card {
     padding: 60px 40px;
     text-align: center;
     background: var(--white);
     border-right: 2px solid var(--black);
     transition: all 0.3s;
     cursor: pointer;
 }

 .stat-card:last-child {
     border-right: none;
 }

 .stat-card:hover {
     background: var(--cream);
 }

 .stat-card:hover .stat-number {
     transform: scale(1.1);
 }

 .stat-number {
     font-size: 72px;
     font-weight: 700;
     font-family: 'Inter', sans-serif;
     margin-bottom: 12px;
     line-height: 1;
     transition: transform 0.3s;
 }

 .stat-label {
     font-size: 12px;
     text-transform: uppercase;
     letter-spacing: 1px;
     font-weight: 600;
 }

 /* Contact Section */
 .contact-section {
     padding: 100px 40px;
     background: var(--black);
     color: var(--white);
     text-align: center;
     border-top: 2px solid var(--black);
 }

 .contact-section h2 {
     font-size: 72px;
     font-weight: 700;
     margin-bottom: 30px;
     letter-spacing: -2px;
 }

 .contact-section p {
     font-size: 20px;
     margin-bottom: 50px;
     max-width: 600px;
     margin-left: auto;
     margin-right: auto;
 }

 .contact-buttons {
     display: flex;
     gap: 20px;
     justify-content: center;
     flex-wrap: wrap;
 }

 .contact-button {
     background: var(--white);
     color: var(--black);
     padding: 20px 50px;
     font-size: 14px;
     font-weight: 600;
     letter-spacing: 1px;
     text-transform: uppercase;
     border: none;
     cursor: pointer;
     font-family: 'Inter', sans-serif;
     transition: all 0.3s;
     text-decoration: none;
     display: inline-block;
 }

 .contact-button:hover {
     background: var(--orange);
     color: var(--white);
     transform: scale(1.05);
 }

 .contact-button.secondary {
     background: transparent;
     color: var(--white);
     border: 2px solid var(--white);
 }

 .contact-button.secondary:hover {
     background: var(--white);
     color: var(--black);
 }

 /* Footer */
 footer {
     background: var(--black);
     color: var(--white);
     padding: 30px 40px;
     text-align: center;
     font-size: 12px;
     font-family: 'Inter', sans-serif;
     border-top: 1px solid #333;
 }

 @media (max-width: 1200px) {
     .main-grid {
         grid-template-columns: 1fr;
     }

     .content-left {
         grid-column: 1;
         border-right: none;
         border-bottom: 2px solid var(--black);
     }

     .sidebar-right {
         grid-column: 1;
     }

     .projects-grid {
         grid-template-columns: 1fr;
     }

     .stats-section {
         grid-template-columns: repeat(2, 1fr);
     }

     h1 {
         font-size: 56px;
     }
 }

 @media (max-width: 768px) {
     .top-bar {
         flex-direction: column;
         gap: 10px;
         text-align: center;
     }

     .nav-menu {
         flex-direction: column;
         gap: 15px;
     }

     .stats-section {
         grid-template-columns: 1fr;
     }

     .expertise-grid {
         grid-template-columns: 1fr;
     }

     h1 {
         font-size: 42px;
     }

     .section-title {
         font-size: 38px;
     }

     .contact-section h2 {
         font-size: 48px;
     }

     .profile-photo-container {
         width: 100%;
         max-width: 280px;
     }
 }

 img {
 max-width: 100%;
 height:auto;
 display: block;
 }

/* Hero Section */
.hero-section {
    padding: 100px 40px;
    background: var(--white);
    border-top: 2px solid var(--black);
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
}

.hero-content {
    max-width: 1200px;
    width: 100%;
}

.hero-title {
    font-size: 72px;
    font-weight: 700;
    margin-bottom: 30px;
    letter-spacing: -2px;
    line-height: 1.1;
}

.hero-subtitle {
    color: var(--orange);
}

.hero-description {
    font-size: 20px;
    line-height: 1.7;
    margin-bottom: 50px;
    max-width: 700px;
    color: var(--gray);
}

.hero-cta {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
}

.cta-button {
    background: var(--black);
    color: var(--white);
    border: none;
    padding: 18px 40px;
    font-size: 13px;
    font-weight: 600;
    letter-spacing: 1px;
    text-transform: uppercase;
    cursor: pointer;
    font-family: 'Inter', sans-serif;
    transition: all 0.3s;
    width: fit-content;
    text-decoration: none;
    display: inline-block;
}

.cta-button:hover {
    background: var(--orange);
    transform: translateX(5px);
}

.cta-button.primary {
    background: var(--black);
}

.cta-button.secondary {
    background: transparent;
    border: 2px solid var(--black);
    color: var(--black);
}

.cta-button.secondary:hover {
    background: var(--black);
    color: var(--white);
}

/* About Section */
.about-section {
    padding: 80px 40px;
    background: var(--cream);
    border-top: 2px solid var(--black);
}

.about-content {
    max-width: 900px;
    margin: 0 auto;
}

.about-content-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 60px;
    align-items: center;
}

.about-text p {
    font-size: 18px;
    line-height: 1.8;
    margin-bottom: 25px;
    color: var(--black);
}

.about-text strong {
    font-weight: 600;
    color: var(--black);
}

.about-highlights {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    margin-top: 40px;
    padding-top: 30px;
    border-top: 2px solid var(--black);
}

.highlight-item {
    text-align: center;
}

.highlight-number {
    font-size: 48px;
    font-weight: 700;
    font-family: 'Inter', sans-serif;
    color: var(--orange);
    line-height: 1;
    margin-bottom: 10px;
}

.highlight-label {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 600;
    color: var(--gray);
}

.about-photo {
    position: relative;
}

.profile-photo-frame {
    width: 100%;
    max-width: 400px;
    aspect-ratio: 1;
    border: 3px solid var(--black);
    border-radius: 50%;
    overflow: hidden;
    background: var(--white);
    position: relative;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

.profile-photo-frame img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center top;
}

/* Project Enhancements */
.project-subtitle {
    font-size: 16px;
    font-weight: 500;
    color: var(--gray);
    margin-bottom: 10px;
}

.project-period {
    font-size: 12px;
    font-family: 'Inter', sans-serif;
    color: var(--gray);
    margin-bottom: 15px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.project-role {
    font-size: 13px;
    margin-bottom: 15px;
    padding: 10px 0;
    border-top: 1px solid var(--light-gray);
}

.project-contributions {
    font-size: 13px;
    margin-bottom: 20px;
}

.project-contributions strong {
    display: block;
    margin-bottom: 10px;
    font-weight: 600;
}

.project-contributions ul {
    margin-left: 20px;
    color: var(--gray);
}

.project-contributions li {
    margin-bottom: 8px;
    line-height: 1.5;
}

.project-links {
    display: flex;
    gap: 15px;
    margin-top: 20px;
    flex-wrap: wrap;
}

.project-link {
    font-size: 12px;
    font-weight: 600;
    font-family: 'Inter', sans-serif;
    color: var(--black);
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: color 0.3s;
}

.project-link:hover {
    color: var(--orange);
}

/* Responsive Updates */
@media (max-width: 1024px) {
    .about-content-wrapper {
        grid-template-columns: 1fr;
        gap: 40px;
    }

    .about-photo {
        order: -1;
        display: flex;
        justify-content: center;
    }

    .profile-photo-frame {
        max-width: 300px;
    }
}

@media (max-width: 768px) {
    .hero-title {
        font-size: 42px;
    }

    .hero-description {
        font-size: 16px;
    }

    .about-text p {
        font-size: 16px;
    }

    .about-highlights {
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .highlight-number {
        font-size: 36px;
    }

    .hero-cta {
        flex-direction: column;
    }

    .cta-button {
        width: 100%;
        text-align: center;
    }

    .profile-photo-frame {
        max-width: 250px;
    }
}